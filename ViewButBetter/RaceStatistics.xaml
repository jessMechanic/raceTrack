<Window x:Class="ViewButBetter.RaceStatistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewButBetter" xmlns:controller="clr-namespace:controller;assembly=controller"
        mc:Ignorable="d"
        Title="RaceStatistics" Height="450" Width="297">
    <Window.DataContext>
        <controller:DataContext/>
    </Window.DataContext>
    <Grid>
        <Label Content="places" Margin="18,0,209,405"/>
        <Label Content="fastest lap " HorizontalAlignment="Left" Margin="163,248,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="lap time" HorizontalAlignment="Left" Margin="19,248,0,0" VerticalAlignment="Top"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="18,34,171,248" ItemsSource="{Binding PLaces, Mode=OneWay}"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="19,279,170,15" ItemsSource="{Binding LapTimes, Mode=OneWay}"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="154,279,35,15" ItemsSource="{Binding FastestLapTimes, Mode=OneWay}"/>


    </Grid>
</Window>
